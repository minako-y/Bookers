<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      <!--リンク用セル3つ分結合-->
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book.id) %></th>
      <th><%= link_to "Edit", book_path(book.id) %></th>
      <th><%= link_to "Destroy", book_path(book.id), methood: :delete, "data-confirm" => "Are you sure?" %></th>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
  
  
